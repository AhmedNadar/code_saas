<div class="row">

  <div class="col-md-6 col-md-offest-3 text-center">
    <% if params[:plan] == '2' %>
      <h1>Pro Account</h1>
      <p>Enjoy full access to all community members for $10 a month.</p>
    <% else %>
      <h1>Basic Account</h1>
      <p>Join the community and enjoy getting together with your peers.</p>
    <% end %>
  </div>

  <div class="col-md-6 col-md-offest-3">
  <div class="well">
    <h2>Sign up</h2>
    <% if params[:plan] == '2' %>
      <%= render "devise/registrations/pro_form" %>
    <% else %>
      <%= render "devise/registrations/basic_form" %>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>